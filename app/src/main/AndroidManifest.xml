<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.affinityapps.musicalstructure">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".RockActivity"
            android:label="@string/rock_artists"
            android:parentActivityName=".MainActivity"/>

        <activity android:name=".RapActivity"
            android:label="@string/rap_artists"
            android:parentActivityName=".MainActivity"/>

        <activity android:name=".ClassicalActivity"
            android:label="@string/classical_artists"
            android:parentActivityName=".MainActivity"/>

        <activity android:name=".ClubDanceActivity"
            android:label="@string/club_dance_artists"
            android:parentActivityName=".MainActivity"/>
    </application>

</manifest>