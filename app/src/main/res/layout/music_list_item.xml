<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/song_info_container"
    android:minHeight="@dimen/condensed_item_height">

    <TextView
        android:id="@+id/play_option_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/rap_color"
        android:textStyle="bold"
        android:textSize="12sp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/song_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/play_option_text"
        android:layout_toEndOf="@id/play_option_text"
        android:textColor="@color/rap_color"
        android:textStyle="bold"
        android:textSize="12sp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/artist_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/song_name_text"
        android:layout_toEndOf="@+id/song_name_text"
        android:textColor="@color/rap_color"
        android:textStyle="bold"
        android:textSize="12sp"
        tools:ignore="RelativeOverlap"
        android:padding="10dp"/>

</RelativeLayout>